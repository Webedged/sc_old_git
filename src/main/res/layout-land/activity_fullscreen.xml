<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ttipsBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:paddingLeft="25dp">

    <LinearLayout
        android:id="@+id/ttipsContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#dde0e3"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTrainigstipps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp"
                    android:text="@string/label_trainingstipps_popup"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/fontcolor_lightblue"
                    android:textSize="@dimen/fontsize_30" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trainingstippsbild1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trainingstippsbild2" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:paddingTop="70dp"
            android:paddingBottom="10dp">

            <WebView
                android:id="@+id/webViewtrainingstipps"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:layout_alignParentRight="false"
                android:layout_toRightOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/webViewtrainingstipps"
                android:layout_alignParentLeft="true"
                android:src="@drawable/balkenvertikal" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>